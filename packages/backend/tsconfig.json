{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": true
  },
  "include": ["convex/**/*", "scripts/**/*"],
  "exclude": ["convex/_generated", "node_modules"]
}
