{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx @biomejs/biome lint --write --skip=correctness/noUnusedImports --no-errors-on-unmatched . && npx @biomejs/biome format --write --no-errors-on-unmatched ."
          }
        ]
      }
    ]
  },
  "extraKnownMarketplaces": {
    "mag-claude-plugins": {
      "source": {
        "source": "github",
        "repo": "MadAppGang/claude-code"
      }
    },
    "anthropic-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    }
  }
}
