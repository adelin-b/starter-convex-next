{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#check:biome": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"],
      "outputs": []
    },
    "//#check:eslint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.js",
        "packages/eslint-config/**"
      ],
      "outputs": []
    },
    "//#check:spell": {
      "inputs": ["$TURBO_DEFAULT$", "cspell.json", ".cspell/**"],
      "outputs": []
    },
    "//#check:sherif": {
      "inputs": ["**/package.json", "bun.lock"],
      "outputs": []
    },
    "//#check:knip": {
      "inputs": ["$TURBO_DEFAULT$", "knip.json"],
      "outputs": []
    },
    "check:eslint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.js",
        "../../packages/eslint-config/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "CONVEX_DEPLOY_KEY",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CONVEX_SITE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "PORT",
        "STORYBOOK_PORT",
        "STORYBOOK_NO_OPEN",
        "E2E_MODE",
        "OLLAMA_BASE_URL",
        "OLLAMA_MODEL",
        "LANGGRAPH_DEPLOYMENT_URL",
        "NEXT_PUBLIC_COPILOTKIT_AGENT_NAME",
        "NEXT_PUBLIC_COPILOTKIT_AGENT_DESCRIPTION",
        "LANGSMITH_API_KEY",
        "LIVEKIT_API_KEY",
        "LIVEKIT_API_SECRET",
        "LIVEKIT_URL",
        "LIVEKIT_WS_URL",
        "LIVEKIT_SIP_OUTBOUND_TRUNK_ID",
        "NEXT_PUBLIC_LIVEKIT_URL",
        "OPENAI_API_KEY",
        "OPENAI_MODEL"
      ]
    },
    "dev:setup": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:web": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:storybook:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:isolated": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:isolated:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:web:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:e2e:coverage": {
      "cache": false,
      "outputs": ["test-results/**", "coverage-report/**", ".v8-coverage/**"],
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "CI",
        "NODE_V8_COVERAGE",
        "V8_COVERAGE"
      ]
    },
    "test:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "intl:lint": {
      "inputs": ["src/**/*.{ts,tsx}", "eslint.config.js"]
    },
    "intl:extract": {
      "inputs": ["src/**/*.{ts,tsx}"],
      "outputs": ["src/locales/en.json"]
    },
    "lint:steps": {
      "inputs": ["tests/**/*.{ts,feature}"]
    }
  }
}
