{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "//#check:biome": {
      "inputs": ["$TURBO_DEFAULT$", "biome.json"],
      "outputs": []
    },
    "//#check:eslint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.js",
        "packages/eslint-config/**"
      ],
      "outputs": []
    },
    "//#check:spell": {
      "inputs": ["$TURBO_DEFAULT$", "cspell.json", ".cspell/**"],
      "outputs": []
    },
    "//#check:sherif": {
      "inputs": ["**/package.json", "bun.lock"],
      "outputs": []
    },
    "//#check:knip": {
      "inputs": ["$TURBO_DEFAULT$", "knip.json"],
      "outputs": []
    },
    "check:eslint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.js",
        "../../packages/eslint-config/**"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "CONVEX_DEPLOY_KEY",
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CONVEX_SITE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check:types": {
      "dependsOn": ["^check:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "PORT",
        "STORYBOOK_PORT",
        "STORYBOOK_NO_OPEN",
        "E2E_MODE"
      ]
    },
    "dev:setup": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:web": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:storybook": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:storybook:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:isolated": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "passThroughEnv": ["PLAYWRIGHT_*", "CI"],
      "inputs": ["$TURBO_DEFAULT$", "playwright.config.ts", "tests/**"]
    },
    "test:isolated:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:web:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "test:e2e:coverage": {
      "cache": false,
      "outputs": ["test-results/**", "coverage-report/**", ".v8-coverage/**"],
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "CI",
        "NODE_V8_COVERAGE",
        "V8_COVERAGE"
      ]
    },
    "test:ui": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "intl:lint": {
      "inputs": ["src/**/*.{ts,tsx}", "eslint.config.js"]
    },
    "intl:extract": {
      "inputs": ["src/**/*.{ts,tsx}"],
      "outputs": ["src/locales/en.json"]
    },
    "//#check:skills": {
      "inputs": [".claude/**", "scripts/lint-claude-skills.ts"],
      "outputs": []
    },
    "check:steps": {
      "inputs": [
        "apps/e2e/features/**/*.feature",
        "apps/e2e/features/**/*.ts",
        "apps/e2e/scripts/lint-steps.ts"
      ],
      "outputs": []
    },
    "cap:sync": {
      "cache": false,
      "inputs": ["capacitor.config.ts", "public/**", "package.json"]
    },
    "cap:sync:android": {
      "cache": false,
      "inputs": ["capacitor.config.ts", "public/**", "package.json"]
    },
    "cap:sync:ios": {
      "cache": false,
      "inputs": ["capacitor.config.ts", "public/**", "package.json"]
    },
    "cap:android": {
      "dependsOn": ["cap:sync:android"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": [
        "CAPACITOR_SERVER_URL",
        "PORT",
        "ANDROID_HOME",
        "ANDROID_SDK_ROOT",
        "JAVA_HOME",
        "ANDROID_TARGET"
      ]
    },
    "cap:android:logs": {
      "cache": false,
      "persistent": true
    },
    "cap:ios": {
      "dependsOn": ["cap:sync:ios"],
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["CAPACITOR_SERVER_URL", "PORT"]
    },
    "check:capacitor": {
      "cache": false
    }
  }
}
