{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "!.worktrees",
      "!**/.next",
      "!**/.next-e2e*",
      "!**/.convex-e2e-test*",
      "!**/.react-email",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/convex/_generated",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!bun.lock",
      "!**/tests/features/.generated",
      "!**/packages/eslint-config",
      "!chrome-data-dir",
      "!**/templates/html",
      "!**/templates/docx-source"
    ]
  },
  "extends": ["ultracite/core", "ultracite/react", "ultracite/next"],
  "assist": {
    "actions": {
      "source": {}
    }
  },
  "linter": {
    "domains": {
      "react": "all",
      "next": "all",
      "test": "all",
      "project": "all"
    },
    "rules": {
      "correctness": {
        "noUnusedImports": "warn"
      },
      "style": {
        "noProcessEnv": "error",
        "useConsistentTypeDefinitions": {
          "level": "error",
          "options": { "style": "type" }
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "convex/values": {
                "importNames": ["v"],
                "message": "Use Zod schemas instead of v validator. See packages/backend/convex/schema.ts for examples."
              }
            }
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/features/agencies/components/agency-form.tsx",
        "**/features/agencies/components/create-agency-dialog.tsx",
        "**/features/documents/components/document-form-modal.tsx",
        "**/admin/documents/page.tsx"
      ],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.stories.tsx",
        "e2e/**/*",
        "**/e2e/**/*",
        "**/tests/features/**/*.ts"
      ],
      "linter": {
        "rules": {
          "a11y": {
            "noSvgWithoutTitle": "off",
            "useFocusableInteractive": "off",
            "useSemanticElements": "off"
          },
          "complexity": {
            "noForEach": "off",
            "noBannedTypes": "off",
            "noExcessiveCognitiveComplexity": "off"
          },
          "nursery": {
            "noIncrementDecrement": "off"
          },
          "correctness": {
            "noUnusedFunctionParameters": "off"
          },
          "suspicious": {
            "noConsole": "off",
            "useAwait": "off",
            "noExplicitAny": "off",
            "noArrayIndexKey": "off"
          },
          "performance": {
            "useTopLevelRegex": "off",
            "noImgElement": "off"
          },
          "style": {
            "noMagicNumbers": "off",
            "noNonNullAssertion": "off",
            "noDescendingSpecificity": "off",
            "noProcessEnv": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/backend/convex/**/*"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/ui/src/**/*"],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off",
            "noImgElement": "off"
          },
          "security": {
            "noDangerouslySetInnerHtml": "off"
          },
          "complexity": {
            "noForEach": "off"
          },
          "suspicious": {
            "noArrayIndexKey": "off",
            "noExplicitAny": "off"
          },
          "a11y": {
            "useSemanticElements": "off",
            "useFocusableInteractive": "off",
            "noSvgWithoutTitle": "off"
          },
          "style": {
            "noNonNullAssertion": "off",
            "noNestedTernary": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/env.ts",
        "playwright.config.ts",
        "playwright-bdd.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noProcessEnv": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/backend/convex/utils/crud.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off",
            "noRestrictedImports": "off"
          }
        }
      }
    },
    {
      "includes": ["packages/emails/src/**/*"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": ["**/@x/**/*"],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/e2e/lib/test.ts",
        "apps/e2e/lib/components/index.ts",
        "apps/e2e/lib/pages/index.ts",
        "apps/web/src/lib/convex-hooks.ts",
        "apps/web/src/lib/i18n.ts",
        "apps/web/src/features/**/index.ts",
        "packages/backend/convex/integrations/**/index.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noBarrelFile": "off"
          }
        }
      }
    }
  ],
  "formatter": {
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "css": {
    "parser": {
      "cssModules": false,
      "tailwindDirectives": true
    }
  }
}
