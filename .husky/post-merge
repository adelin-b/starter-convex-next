#!/bin/sh

# Auto-install dependencies if package.json or bun.lock changed
CHANGED_FILES=$(git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD 2>/dev/null)

if echo "$CHANGED_FILES" | grep -qE "(package\.json|bun\.lock)"; then
	echo "ðŸ“¦ Dependencies changed, running bun install..."
	bun install
fi
